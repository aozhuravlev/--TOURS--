# tours.batumi Instagram Automation
# Copy to .env and fill in your values

# === API Keys ===
PERPLEXITY_API_KEY=pplx-xxxxx
DEEPSEEK_API_KEY=sk-xxxxx
UNSPLASH_ACCESS_KEY=xxxxx

# === Telegram Bot ===
TELEGRAM_BOT_TOKEN=123456:ABC-xxxxx
TELEGRAM_MODERATOR_CHAT_ID=123456789

# === Instagram Graph API ===
INSTAGRAM_BUSINESS_ACCOUNT_ID=17841400000000000
INSTAGRAM_ACCESS_TOKEN=xxxxx
FACEBOOK_PAGE_ID=123456789

# === Paths (optional, defaults work for standard structure) ===
# MEDIA_PHOTOS_PATH=media/photos
# MEDIA_MUSIC_PATH=media/music
# CONTENT_HISTORY_PATH=data/content_history.json
# OUTPUT_PATH=output

# === Settings ===
# Publication time window (MSK)
PUBLISH_HOUR_START=8
PUBLISH_HOUR_END=9

# Anti-repeat settings
SUBTOPIC_COOLDOWN_DAYS=7
PHOTO_COOLDOWN_DAYS=30
MUSIC_COOLDOWN_DAYS=14

# Video settings
STORY_DURATION_SECONDS=15
VIDEO_BITRATE=4000k

# Logging
LOG_LEVEL=INFO
